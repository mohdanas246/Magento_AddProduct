<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="Employee" translate="label" sortOrder="10">
            <label>Employee</label>
        </tab>
        <section id="Codilar_AddToCart" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Employees</label>
            <tab>Employee</tab>
            <resource>Codilar_AddToCart::employee_config</resource>

            <group id="product_settings" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>SKU Add Product To Cart</label>
                <field id="sku" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Product SKU</label>
                    <comment>Enter the SKU of the product to add to the cart.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
